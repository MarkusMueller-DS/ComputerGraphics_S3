#VRML V2.0 utf8

PROTO Prisma [
    field SFColor farbe 0 1 0
]{

    DEF	Prisma Shape {
            geometry IndexedFaceSet {
                coord Coordinate {point	[
                    0 0 0 #Punkt A 0
                    1 0 0 #Punkt B 1
                    0 1 0 #Punkt C 2
                    0 0 1 #Punkt D 3
                    1 0 1 #Punkt E 4
                    0 1 1 #Punkt F 5
                ]}

                coordIndex [0 2 1 -1 0 1 4 3 -1 1 2 5 4 -1 0 3 5 2 -1 3 4 5 -1]
                #solid FALSE
            } #IndexedFaceSet

            appearance Appearance {
                material Material {
                    diffuseColor IS farbe
                } 

            } #Appearance
    } #Prisma
}

Prisma { }

Transform {
    rotation 0 0 1 2.356  # 135Â°:= 135*(pi/180)
    translation 0.85 0.85 0.5 
    children [
        Shape {
            geometry Cone {
                height 1.0
                bottomRadius 1.0
            }    
            appearance Appearance {
                material Material {
                    diffuseColor 1 1 0
                } 
            } 
        }
    ]
}

Transform {
    translation 9 10 -1
    scale 1 2 1
    children [
        Prisma{
            farbe 1 0 0
        }
    ]
}
