# http://tecfa.unige.ch/guides/vrml/vrmlman/node23.html
DEF lightScript Script {
    eventIn SFBool lightIsActive
    eventOut SFBool fixLightState
    field SFBool state FALSE
   
    url ["javascript:
        function lightIsActive(active) {
            if (active) {
                if (state == FALSE) {
                    state = TRUE;
                fixLightState = TRUE;
                }
                else {
                    state = FALSE;
                    fixLightState = FALSE;
                }
            }
        }"
    ]
}

